#include <stdio.h>
#include <stdlib.h>

static unsigned long long int count = 0;

/**
 * n 个铁片
 * 每次可以搬动 p 个字符
 */
void hanoi (long long n,int  d){
    if(n == 0 ) return;
    hanoi(n-1,-d);
    count++;
    hanoi(n-1,+d);
}

int main (int argc,char** argv){
	if(argc < 2){
		printf("please input the total amount!\n");
		exit(EXIT_FAILURE);
	}
    long long  n = atoi(argv[1]);
    hanoi(n,1);
    printf("%d\n",count);
    return 0;
}
